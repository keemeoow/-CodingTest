import java.util.*;

public class Solution {
    public int solution(int n) {
        int ans = 0;

        // n이 0이 될 때까지 반복
        while (n != 0) {
            // n을 2로 나눈 나머지가 1이면
            if (n % 2 == 1) {
                ans++; // 건전지 개수 증가
            }
            n /= 2;
        }
        return ans;
    }
}
